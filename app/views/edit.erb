<form action="/articles/:id" method="post">
    Article Title: <input type="text" name="title" value=<%= Article.find_by(id: @article_id).title %>>
    Article Content: <input type="text" name="content" value=<%= Article.find_by(id: @article_id).content %>>
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <input type="submit" id="submit">    
</form>